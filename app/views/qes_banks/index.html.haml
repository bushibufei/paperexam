- provide(:title, t('.title'))


.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "list", text: t(controller_name + "." + action_name + '.title')

          = link_to xls_download_qes_banks_path, :class => "button button-royal pull-right button-small mr-1" do
            下载表格模板
          
          %button.button.button-caution.button-small.pull-right.mr-1{"data-target" => "#exampleModal", "data-toggle" => "modal", :type => "button"}
            上传表格

          = link_to Setting.error_logs.label, error_logs_path, :class => "button button-highlight button-small mr-1" 
          

          -#
            = link_to "/#{controller_name}/new", :class => "button  button-small pull-right button-primary mr-1" do
              = fa_icon "plus", text: Setting.systems.btn_new, right: false 
          %button.button.button-primary.button-small.pull-right.mr-1{"data-target" => "#newModal", "data-toggle" => "modal", :type => "button"}
            = fa_icon "plus", text: Setting.systems.btn_new, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            -#
              .col-md-12
              = hidden_field_tag "fct", idencode(@factory.id), :class => "fct-val"
            .col-md-12
              %table#item-table.text-center.table-sm{:'data-toggle' => "table", :'data-id-table'=>"advancedTable", :"data-pagination"=>"true", :'data-page-size' => "25", :"data-search" => "true", :'data-advanced-search'=>"true", :'data-virtual-scroll' => false }
                %thead
                  %tr
                    %th{:scope => "col", :'data-field' => "id"} #
                  
                    %th{:scope => "col", :'data-field' => "name"}
                      = Setting.qes_banks.name
                  
                    %th{:scope => "col", :'data-field' => "editor"}
                      = Setting.qes_banks.editor
                  
                    %th{:scope => "col", :'data-field' => "single_count"}
                      = Setting.qes_banks.single_count
                  
                    %th{:scope => "col", :'data-field' => "mcq_count"}
                      = Setting.qes_banks.mcq_count
                  
                    %th{:scope => "col", :'data-field' => "tof_count"}
                      = Setting.qes_banks.tof_count
                  
                    %th{:scope => "col", :'data-field' => "qaa_count"}
                      = Setting.qes_banks.qaa_count
                  
                    %th{:scope => "col", :'data-field' => "button"}
                %tbody
                  - @qes_banks.each_with_index do |qes_bank, index|
                    %tr
                      %td{:scope => "row"}
                        = index+1
                    
                      %td
                        = qes_bank.name
                      %td
                        = qes_bank.editor
                      %td
                        = qes_bank.single_count
                      %td
                        = qes_bank.mcq_count
                      %td
                        = qes_bank.tof_count
                      %td
                        = qes_bank.qaa_count
                      %td
                        .container-fluid
                          .row.justify-content-center
                            = link_to "编辑", edit_qes_bank_path(idencode(qes_bank.id)), :class => "button button-royal button-small mr-1" 
                            = link_to "单选题",  qes_bank_singles_path(idencode(qes_bank.id)), :class => "button button-primary button-small mr-1" 
                            = link_to "多选题",  qes_bank_mcqs_path(idencode(qes_bank.id)), :class => "button button-action button-small mr-1" 
                            = link_to "判断题",  qes_bank_tofs_path(idencode(qes_bank.id)), :class => "button button-caution button-small mr-1" 
                            = link_to "问答题",  qes_bank_qaas_path(idencode(qes_bank.id)), :class => "button button-highlight button-small mr-1" 
                            -#
                              = link_to "删除",  qes_bank_path(idencode(qes_bank.id)), :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "button button-caution button-small" 
            -#
              .col-md-12.site-theme-paginate-wrapper.d-flex.justify-content-center.mt-3
                = paginate @qes_banks, window: 2, left: 1, right: 1 
      = render "layouts/bootstrap/card"


#exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title
          题库上传 
          %span.text-danger
            上传txt格式文件
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} x 
      .modal-body
        = form_tag "/qes_banks/parse_excel", multipart: true, id: "form-parse-excel", onsubmit: 'form_parse_submit()' do
          .form-group.row
            .col-12
              %label.newbutton.button.button-primary.w-100
                %p.append-url
                  选择文件
                = file_field_tag "excel_file", :required => true , accept: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet', :class => "select-file", :onchange => "readFileName(this);"
          .form-group.row
            .col-sm-12
              .progress.ctn-progress
                .progress-bar.w-100.progress-bar-striped.progress-bar-animated{:role => "progressbar", :"aria-valuenow" => "100", :"aria-valuemin" => "0", :"aria-valuemax" => "100"}
          .form-group.row
            .col-8
              = submit_tag '保存', :class => "btn btn-primary btn-parse-submit " 


#newModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "newModalLabel", :tabindex => "-1"}
  .modal-dialog.modal-xl.modal-dialog-centered
    .modal-content
      .modal-header
        -#
          = image_tag "gykg.jpg"
          %h5.text-success
            = Setting.qes_banks.label
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} x 
      .modal-body
        = render 'form'
