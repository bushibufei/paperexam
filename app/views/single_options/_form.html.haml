.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @single_option, :url => "/single_options/#{@single_option.id ? idencode(@single_option.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @single_option.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@single_option.errors.count, "错误")}:"
            %ul
              - @single_option.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-header.bg-transparent.border-success
                %h5
                  = Setting.single_options.label
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.single_options.title, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :title, :class => "form-control" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.single_options.answer, :class => "text-center"
                      %td.p-2.text-center
                        .form-check.form-check-inline
                          = f.radio_button :answer, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                          = f.label Setting.systems.status_yes, :class => "form-check-label"
                        .form-check.form-check-inline
                          = f.radio_button :answer, Setting.systems.status_en_no, :class => "form-check-input"
                          = f.label Setting.systems.status_no, :class => "form-check-label"
                      
                    
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', single_options_path, :class => "button button-small  button-caution"
